@page
@model ClinicaVet.App.Frontend.Pages.DetalleHistoriasModel
@{
}
<h1>Detalle historia Clinica</h1>
<br>
<h2>La historia de: @Model.Historia.consultas[0].mascota.nombre</h2>
<br>
<p>Este es el listado de las consultas que ha tenido la mascota</p>
<table class="table">
    <tr>
        <th>Cliente</th>
        <th>Veterinario</th>
        <th>Auxiliar</th>
        <th>Medicamento</th>
        <th>Dosis</th>
        <th>Anotación</th>
        <th>Fecha</th>
    </tr>
    @foreach(var consulta in @Model.Historia.consultas){
        <tr>
            <td>@consulta.dueño</td>
            <td>@consulta.veterinario</td>
            <td>@consulta.auxiliar</td>
            <td>@consulta.receta.medicamentos</td>
            <td>@consulta.receta.dosis</td>
            <td>@consulta.FechaConsulta</td>
        </tr>
    }
</table>