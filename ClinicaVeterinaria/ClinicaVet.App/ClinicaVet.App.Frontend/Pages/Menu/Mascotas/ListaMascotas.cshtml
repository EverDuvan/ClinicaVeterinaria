@page
@model ClinicaVet.App.Frontend.Pages.Menu.ListaMascotasModel
@{
}
<h1>Gestionar Mascotas</h1>
<p>Está pagina esta diseñada para gestionar nuevas Mascotas</p>
<a class="btn btn-primary table-btn" asp-page="./AdicionMascota">Agregar Mascota</a>
<table class="table table-dark">
<tr>
    <th scope="col">Id</th>
    <th scope="col">Dueño</th>
    <th scope="col">Nombre</th>
    <th scope="col">FechaNacimeinto</th>
    <th scope="col">Descripcion</th>
    <th scope="col">TipoMascota</th>
</tr>
@foreach(var mascota in Model.mascotas){
    <tr>
        <td>@mascota.Id</td>
        <td>@mascota.dueño</td>
        <td>@mascota.nombre</td>
        <td>@mascota.fechaNacimiento</td>
        <td>@mascota.descripcion</td>
        <td>@mascota.tipoMascota</td>
        
        <td><a class="btn btn-primary table-btn" asp-page="./DetalleMascota" asp-route-mascotaId="@mascota.Id">Detalle</a><br>
        <a class="btn btn-primary table-btn" asp-page="./EditarMascota" asp-route-mascotaId="@mascota.Id">Editar</a><br>
        <a class="btn btn-primary table-btn" asp-page="./EliminarMascota" asp-route-mascotaId="@mascota.Id">Eliminar</a><br>
    </tr>
}    
</table>
<img class="img-responsive img-rounded" src="~/imagenes/mascotas.jpg" alt="imagen mascotas">