@page
@model ClinicaVet.App.Frontend.Pages.Menu.AdicionMascotaModel
@using ClinicaVet.App.Dominio;
@{
}
<h1>Agregar Mascota</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="cedulaDueño">Dueño o Propietario</label>
        <select asp-for="cedulaDueño" asp-items="@Model.Dueños"></select>
        </div>    
    </div>
    <div class="form-group row">
        <label asp-for="mascota.nombre" class="col-sm-2">Nombre</label>
        <input asp-for="mascota.nombre" class="form-control">
    </div>
    <div class="form-group row">
        <label asp-for="mascota.fechaNacimiento" class="col-sm-2">Fecha de Nacimiento</label>
        <input asp-for="mascota.fechaNacimiento" class="form-control">
    </div>      
    <div class="form-group row">
        <label asp-for="mascota.descripcion" class="col-sm-2">Descripcion</label>
        <input asp-for="mascota.descripcion" class="form-control">
    </div>   

     <div class="form-group row">
        <label asp-for="mascota.tipoMascota">Tipo de Mascota</label>
        <div class="col-sm-10"> 
        <select asp-for="mascota.tipoMascota" asp-items="Html.GetEnumSelectList<TipoMascota>()"></select>
        </div>     
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="./ListaMascotas" class="btn btn-primary">Cancelar</a>  
</form>
