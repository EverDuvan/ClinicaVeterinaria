@page
@model ClinicaVet.App.Frontend.Pages.Menu.AdicionMascotaModel
@using ClinicaVet.App.Dominio;
@{
}
<h1>Agregar Mascota</h1>
<form method="post" class="mt-3">
    <input hidden asp-for="mascota.Id"/>

    

    <div class="form-group row">
        <label asp-for="mascota.dueño" class="col-sm-2">Dueño</label>
        <input asp-for="mascota.dueño" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="mascota.nombre" class="col-sm-2">Nombre</label>
        <input asp-for="mascota.nombre" class="form-control" value="">
    </div>
    <div class="form-group row">
        <label asp-for="mascota.fechaNacimiento" class="col-sm-2">FechaNacimiento</label>
        <input asp-for="mascota.fechaNacimiento" class="form-control" value="">
    </div>      
    <div class="form-group row">
        <label asp-for="mascota.descripcion" class="col-sm-2">Descripcion</label>
        <input asp-for="mascota.descripcion" class="form-control" value="">
    </div>   

     <div class="form-group row">
        <label asp-for="mascota.tipoMascota">TipoMascota</label>
        <div class="col-sm-10"> 
        <select asp-for="mascota.tipoMascota" asp-items="Html.GetEnumSelectList<TipoMascota>()"></select>
        </div>     
     </div>


   
    
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="./ListaAgenda" class="btn btn-primary">Cancelar</a>  
</form>
