@page
@model ClinicaVet.App.Frontend.Pages.Menu.EditarMascotaModel
@using ClinicaVet.App.Dominio;
@{
}
<h1>Edicion de Mascota</h1>
<p>Esta es la mascota que se va ha editar @Model.mascota.nombre</p>
<form method="post" class="mt-3">
    <input hidden asp-for="mascota.Id"/>
    <div class="form-group row">
        <label asp-for="mascota.dueño" class="col-sm-2">Dueño</label>
        <input asp-for="mascota.dueño" class="form-control" required>
    </div>
    <div class="form-group row">
        <label asp-for="mascota.nombre" class="col-sm-2">Nombre</label>
        <input asp-for="mascota.nombre" class="form-control" >
    </div>
    <div class="form-group row">
        <label asp-for="mascota.fechaNacimiento" class="col-sm-2">FechaNacimeinto</label>
        <input asp-for="mascota.fechaNacimiento" class="form-control" >
    </div>      
    <div class="form-group row">
        <label asp-for="mascota.descripcion" class="col-sm-2">Descripcion</label>
        <input asp-for="mascota.descripcion" class="form-control" >
    </div>   
    <div class="form-group row">
        <label asp-for="mascota.tipoMascota" class="col-sm-2">TipoMascota</label>
        <input asp-for="mascota.tipoMascota" class="form-control" >
    </div>  
</form>