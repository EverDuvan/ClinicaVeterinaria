@page
@using ClinicaVet.App.Dominio
@using ClinicaVet.App.Persistencia
@model ClinicaVet.App.Frontend.Pages.ListaConsultasModel
@{
}
<h1>Gestionar Consultas</h1>
<p>Está pagina esta diseñada para gestionar nuevas Consutas</p>
<a class="btn btn-primary table-btn" asp-page="./AdicionConsultas">Agregar Consulta</a>
<table class="table table-dark">
<tr>
    <th scope="col">Mascota</th>
    <th scope="col">Veterinario</th>
    <th scope="col">Auxiliar</th>
    <th scope="col">Anotación</th>
    <th scope="col">Fecha de la Consulta</th>
</tr>
@foreach(var consulta in Model.consultas){
    <tr>
        <td>@consulta.mascota</td>
        <td>@consulta.veterinario</td>
        <td>@consulta.auxiliar</td>
        <td>@consulta.anotacion</td>
        <td>@consulta.FechaConsulta</td>
        
       
    </tr>
}
</table>

<img class="img-responsive img-rounded" src="~/imagenes/consulta.jpg" alt="imagen consulta">