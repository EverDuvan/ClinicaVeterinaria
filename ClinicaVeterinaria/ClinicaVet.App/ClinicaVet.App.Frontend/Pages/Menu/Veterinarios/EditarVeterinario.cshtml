@page
@model ClinicaVet.App.Frontend.Pages.EditarVeterinarioModel
@using ClinicaVet.App.Dominio
@{
}
<h1>Edicion de veterinario</h1>
<p>Este es el usuario que se va ha editar @Model.veterinario.nombre</p>
<form method="post" class="mt-3">
    <input hidden asp-for="veterinario.Id"/>
    <div class="form-group row">
        <label asp-for="veterinario.cedula" class="col-sm-2">Cedula</label>
        <input asp-for="veterinario.cedula" class="form-control"  required>
    </div>
    <div class="form-group row">
        <label asp-for="veterinario.nombre" class="col-sm-2">Nombre</label>
        <input asp-for="veterinario.nombre" class="form-control" >
    </div>
    <div class="form-group row">
        <label asp-for="veterinario.apellido" class="col-sm-2">Apellido</label>
        <input asp-for="veterinario.apellido" class="form-control" >
    </div>      
    <div class="form-group row">
        <label asp-for="veterinario.celular" class="col-sm-2">Celular</label>
        <input asp-for="veterinario.celular" class="form-control" >
    </div>   
    <div class="form-group row">
        <label asp-for="veterinario.direccion" class="col-sm-2">Direccion</label>
        <input asp-for="veterinario.direccion" class="form-control" >
    </div>  
    <div class="form-group row">
        <label asp-for="veterinario.ciudad" class="col-sm-2">Ciudad</label>
        <input asp-for="veterinario.ciudad" class="form-control" >
    </div>  
    <div class="form-group row">
        <label asp-for="veterinario.username" class="col-sm-2">Nombre de usuario</label>
        <input asp-for="veterinario.username" class="form-control" >
    </div>  
    <div class="form-group row">
        <label asp-for="veterinario.email" class="col-sm-2">Correo electrónico</label>
        <input asp-for="veterinario.email" class="form-control" >
    </div>  
    <div class="form-group row">
        <label asp-for="veterinario.password" class="col-sm-2">Contraseña</label>
        <input asp-for="veterinario.password" class="form-control" >
    </div>  
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="./ListaVeterinario" class="btn btn-primary">Cancelar</a>
    </div>
</form>